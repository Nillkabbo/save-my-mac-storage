# MANIFEST.in for macOS Cleaner
# Copyright (c) 2026 macOS Cleaner contributors

# Include documentation files
include README.md
include CHANGELOG.md
include LICENSE
include CONTRIBUTING.md
include CODE_OF_CONDUCT.md
include SECURITY.md
include USAGE_EXAMPLES.md
include PLAN.md
include PHASE4_SUMMARY.md

# Include configuration files
include *.yaml
include *.yml
include *.toml
include *.cfg
include *.ini

# Include requirements files
include requirements*.txt

# Include scripts
recursive-include scripts *.py *.sh *.rb

# Include source code
recursive-include src/mac_cleaner *.py

# Include templates and static files
recursive-include src/mac_cleaner/templates *
recursive-include src/mac_cleaner/static *

# Include configuration files
recursive-include src/mac_cleaner/config *.yaml *.yml

# Include test files
recursive-include tests *.py

# Include documentation
recursive-include docs *.md *.rst *.txt

# Include Homebrew formula
recursive-include homebrew *.rb *.md

# Include Docker files
include Dockerfile
include docker-compose.yml
include .dockerignore

# Include CI/CD files
recursive-include .github *.yml *.yaml

# Include shell scripts
include *.sh

# Exclude development files
exclude .gitignore
exclude .env.example
exclude .bandit
exclude bandit.yaml
exclude mypy.ini
exclude pytest.ini
exclude test_*.py
exclude *_test.py

# Exclude cache and build files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .ruff_cache
global-exclude .coverage
global-exclude htmlcov

# Exclude OS files
global-exclude .DS_Store
global-exclude Thumbs.db

# Exclude IDE files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo

# Exclude build artifacts
global-exclude build
global-exclude dist
global-exclude *.egg-info
prune build
prune dist
prune *.egg-info
